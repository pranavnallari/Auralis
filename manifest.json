{
  "name": "Auralis",
  "description": "Sample Description",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/index.html",
    "default_icon": "assets/icon.png"
  },
  "permissions" : [
    "activeTab",
    "scripting"
  ],
  "background" : {
    "service_worker" : "scripts/background.js"
  },
  "commands": {
  "toggle-overlay": {
    "suggested_key": {
      "default": "Ctrl+Alt+S"
    },
    "description": "Toggle the Auralis overlay"
  }
},
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],  
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}